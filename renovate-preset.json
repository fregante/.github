{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:linters",
    "group:all",
    ":preserveSemverRanges",
    ":disableDependencyDashboard"
  ],
  "vulnerabilityAlerts": {
    "enabled": false
  },
  "schedule": [
    "every 5 months"
  ],
  "packageRules": [{
    "groupName": "linters",
    "matchPackageNames": [
      "xo"
    ]
  }]
}
